---
// 測試 Bootstrap Components 是否正常運作
import Icon from '@/components/global-components/Icon.vue';
import Layout from '@/layouts/Layout.astro';
---

<Layout>
  <div class="p-6 space-y-8">
    <h1 class="text-3xl font-bold mb-6">Bootstrap Components 測試</h1>
    
    <!-- Card Component 測試 -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Card Components</h2>
      <div class="ec-card max-w-md">
        <div class="ec-card-body">
          <h5 class="text-xl font-bold mb-2">Card Title</h5>
          <Icon name='cart-check' />
          <p class="text-gray-600">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <button class="ec-btn ec-btn-eslite-red mt-3">Go somewhere</button>
        </div>
      </div>
    </section>

    <!-- Form Components 測試 -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Form Components</h2>
      <div class="space-y-4 max-w-md">
        <!-- Form Control -->
        <div>
          <label class="block text-sm font-medium mb-2">Email address</label>
          <input type="email" class="ec-form-control" placeholder="name@example.com">
          <div class="ec-form-text">We'll never share your email with anyone else.</div>
        </div>

        <!-- Form Check -->
        <div class="ec-form-check">
          <input class="ec-form-check-input" type="checkbox" id="flexCheckDefault">
          <label class="ec-form-check-label" for="flexCheckDefault">
            Default checkbox
          </label>
        </div>

        <div class="ec-form-check">
          <input class="ec-form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
          <label class="ec-form-check-label" for="flexRadioDefault1">
            Default radio
          </label>
        </div>

        <!-- Input Group -->
        <div class="ec-input-group">
          <span class="bg-gray-200 border border-gray-300 px-3 py-2">@</span>
          <input type="text" class="ec-form-control" placeholder="Username">
        </div>
      </div>
    </section>

    <!-- List Group 測試 -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">List Group</h2>
      <ul class="ec-list-group max-w-md">
        <li class="ec-list-group-item active">An active item</li>
        <li class="ec-list-group-item">A second item</li>
        <li class="ec-list-group-item">A third item</li>
        <li class="ec-list-group-item">A fourth item</li>
        <li class="ec-list-group-item disabled">A disabled item</li>
      </ul>
    </section>

    <!-- Modal 測試 (結構示例) -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Modal Structure (Hidden)</h2>
      <div class="ec-modal" style="display: block; position: relative; background: rgba(0,0,0,0.1);">
        <div class="ec-modal-dialog">
          <div class="ec-modal-content">
            <div class="ec-modal-header">
              <h5 class="text-xl font-bold">Modal title</h5>
              <button type="button" class="ec-btn ec-btn-link text-gray-500">&times;</button>
            </div>
            <div class="ec-modal-body">
              <p>Modal body text goes here.</p>
            </div>
            <div class="ec-modal-footer">
              <button type="button" class="ec-btn ec-btn-secondary">Close</button>
              <button type="button" class="ec-btn ec-btn-eslite-red">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Border Radius Utils 測試 -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Border Radius Utilities</h2>
      <div class="grid grid-cols-2 gap-4 max-w-md">
        <div class="border-start-radius bg-blue-100 p-4 border border-blue-300">Start Radius</div>
        <div class="border-end-radius bg-green-100 p-4 border border-green-300">End Radius</div>
        <div class="border-radius-lg bg-yellow-100 p-4 border border-yellow-300">Large Radius</div>
        <div class="border-radius-0 bg-red-100 p-4 border border-red-300">No Radius</div>
      </div>
    </section>

    <!-- Bootstrap 4 Custom Controls 測試 -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Bootstrap 4 Custom Controls</h2>
      <div class="space-y-6 max-w-lg">
        
        <!-- Custom Switch -->
        <div>
          <h3 class="text-lg font-medium mb-3">Custom Switch</h3>
          <div class="space-y-2">
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitch1">
              <label class="custom-control-label" for="customSwitch1">Toggle this custom switch</label>
            </div>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitch2" checked>
              <label class="custom-control-label" for="customSwitch2">Checked switch</label>
            </div>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitch3" disabled>
              <label class="custom-control-label" for="customSwitch3">Disabled switch</label>
            </div>
          </div>
        </div>

        <!-- Custom Checkbox -->
        <div>
          <h3 class="text-lg font-medium mb-3">Custom Checkbox</h3>
          <div class="space-y-2">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="customCheck1">
              <label class="custom-control-label" for="customCheck1">Check this custom checkbox</label>
            </div>
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="customCheck2" checked>
              <label class="custom-control-label" for="customCheck2">Checked custom checkbox</label>
            </div>
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="customCheck3" disabled>
              <label class="custom-control-label" for="customCheck3">Disabled custom checkbox</label>
            </div>
          </div>
        </div>

        <!-- Custom Radio -->
        <div>
          <h3 class="text-lg font-medium mb-3">Custom Radio</h3>
          <div class="space-y-2">
            <div class="custom-control custom-radio">
              <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
              <label class="custom-control-label" for="customRadio1">Toggle this custom radio</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input" checked>
              <label class="custom-control-label" for="customRadio2">Or toggle this other custom radio</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" id="customRadio3" name="customRadio2" class="custom-control-input" disabled>
              <label class="custom-control-label" for="customRadio3">Disabled custom radio</label>
            </div>
          </div>
        </div>

        <!-- Custom File Input -->
        <div>
          <h3 class="text-lg font-medium mb-3">Custom File Input</h3>
          <div class="space-y-4">
            <div class="custom-file">
              <input type="file" class="custom-file-input" id="customFile">
              <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            
            <div class="custom-file">
              <input type="file" class="custom-file-input" id="customFileMultiple" multiple>
              <label class="custom-file-label" for="customFileMultiple" data-browse="瀏覽">Choose files</label>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Form Layout 測試 -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Form Layouts</h2>
      <div class="max-w-2xl space-y-6">
        
        <!-- Form Groups -->
        <div>
          <h3 class="text-lg font-medium mb-3">Form Groups</h3>
          <form>
            <div class="form-group">
              <label for="formGroupExampleInput">Example label</label>
              <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input placeholder">
            </div>
            <div class="form-group">
              <label for="formGroupExampleInput2">Another label</label>
              <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder">
            </div>
            <div class="form-group">
              <label for="formControlTextarea">Example textarea</label>
              <textarea class="form-control" id="formControlTextarea" rows="3"></textarea>
            </div>
          </form>
        </div>

        <!-- Form Row -->
        <div>
          <h3 class="text-lg font-medium mb-3">Form Row</h3>
          <form>
            <div class="form-row">
              <div class="col">
                <input type="text" class="form-control" placeholder="First name">
              </div>
              <div class="col">
                <input type="text" class="form-control" placeholder="Last name">
              </div>
            </div>
          </form>
        </div>

        <!-- Inline Forms -->
        <div>
          <h3 class="text-lg font-medium mb-3">Inline Form Check</h3>
          <div class="form-check-inline">
            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
            <label class="form-check-label" for="inlineCheckbox1">1</label>
          </div>
          <div class="form-check-inline">
            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
            <label class="form-check-label" for="inlineCheckbox2">2</label>
          </div>
          <div class="form-check-inline">
            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3" disabled>
            <label class="form-check-label" for="inlineCheckbox3">3 (disabled)</label>
          </div>
        </div>

        <!-- Disabled State -->
        <div>
          <h3 class="text-lg font-medium mb-3">Disabled Controls</h3>
          <form>
            <fieldset disabled>
              <legend class="text-sm font-medium">Disabled fieldset</legend>
              <div class="form-group">
                <label for="disabledTextInput">Disabled input</label>
                <input type="text" id="disabledTextInput" class="form-control" placeholder="Disabled input">
              </div>
              <div class="form-group">
                <label for="disabledSelect">Disabled select menu</label>
                <select id="disabledSelect" class="form-control">
                  <option>Disabled select</option>
                </select>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="disabledFieldsetCheck" disabled>
                <label class="form-check-label" for="disabledFieldsetCheck">
                  Can't check this
                </label>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </section>

    <!-- Reset & Bootstrap Base Styles 測試 -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Typography & Base Styles</h2>
      <div class="max-w-2xl space-y-4">
        <div>
          <h1>h1. Heading 1 (text-h1)</h1>
          <h2>h2. Heading 2 (text-h2)</h2>
          <h3>h3. Heading 3 (text-h3)</h3>
          <h4>h4. Heading 4 (text-h4)</h4>
          <h5>h5. Heading 5 (text-h5)</h5>
          <h6>h6. Heading 6 (text-h6)</h6>
        </div>
        
        <div>
          <p>這是一段普通的段落文字，用來測試 <strong>粗體文字</strong> 和 <em>斜體文字</em> 的顯示效果。</p>
          <p>這是另一段文字，包含 <small>小字體</small> 和 <code>code</code> 元素。</p>
        </div>

        <blockquote>
          <p>這是一個引用區塊，用來測試 blockquote 樣式。</p>
        </blockquote>

        <div>
          <h4>列表測試</h4>
          <ul>
            <li>無序列表項目 1</li>
            <li>無序列表項目 2</li>
            <li>無序列表項目 3</li>
          </ul>
          
          <ol>
            <li>有序列表項目 1</li>
            <li>有序列表項目 2</li>
            <li>有序列表項目 3</li>
          </ol>
        </div>

        <hr>

        <div>
          <h4>連結和按鈕</h4>
          <p>
            <a href="#" class="text-blue-600 hover:underline">這是一個連結</a> | 
            <a href="#" class="text-blue-600 hover:underline">另一個連結</a>
          </p>
          <p>
            <button type="button" class="ec-btn ec-btn-eslite-red">按鈕</button>
            <button type="button" class="ec-btn ec-btn-secondary" disabled>停用按鈕</button>
          </p>
        </div>
      </div>
    </section>

    <!-- EC Button System 測試 -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">EC Button System</h2>
      <div class="max-w-4xl space-y-8">
        
        <!-- Basic Buttons -->
        <div>
          <h3 class="text-lg font-medium mb-3">基本按鈕</h3>
          <div class="flex flex-wrap gap-3">
            <button class="ec-btn ec-btn-black">Black</button>
            <button class="ec-btn ec-btn-eslite-red">Eslite Red</button>
            <button class="ec-btn ec-btn-eslite-light-brown">Light Brown</button>
            <button class="ec-btn ec-btn-eslite-secondary">Eslite Secondary</button>
            <button class="ec-btn ec-btn-secondary">Secondary</button>
            <button class="ec-btn ec-btn-gold-500">Gold 500</button>
          </div>
        </div>

        <!-- Outline Buttons -->
        <div>
          <h3 class="text-lg font-medium mb-3">外框按鈕</h3>
          <div class="flex flex-wrap gap-3">
            <button class="ec-btn ec-btn-outline-black">Outline Black</button>
            <button class="ec-btn ec-btn-outline-eslite-red">Outline Red</button>
            <button class="ec-btn ec-btn-outline-eslite-light-brown">Outline Brown</button>
            <button class="ec-btn ec-btn-outline-eslite-secondary">Outline Secondary</button>
            <button class="ec-btn ec-btn-outline-secondary">Outline Secondary</button>
            <button class="ec-btn ec-btn-outline-gold-500">Outline Gold</button>
          </div>
        </div>

        <!-- Gray Variants -->
        <div>
          <h3 class="text-lg font-medium mb-3">灰階按鈕</h3>
          <div class="flex flex-wrap gap-3">
            <button class="ec-btn ec-btn-m-gray-9">Medium Gray 9</button>
            <button class="ec-btn ec-btn-m-gray-c">Medium Gray C</button>
            <button class="ec-btn ec-btn-l-gray-f4">Light Gray F4</button>
            <button class="ec-btn ec-btn-l-gray-e">Light Gray E</button>
          </div>
        </div>

        <!-- Button Sizes -->
        <div>
          <h3 class="text-lg font-medium mb-3">按鈕尺寸</h3>
          <div class="flex flex-wrap items-center gap-3">
            <button class="ec-btn ec-btn-eslite-red ec-btn-lg">Large Button</button>
            <button class="ec-btn ec-btn-eslite-red">Normal Button</button>
            <button class="ec-btn ec-btn-eslite-red ec-btn-sm">Small Button</button>
          </div>
        </div>

        <!-- Block Button -->
        <div>
          <h3 class="text-lg font-medium mb-3">區塊按鈕</h3>
          <div class="max-w-md">
            <button class="ec-btn ec-btn-eslite-red ec-btn-block">Block Button</button>
          </div>
        </div>

        <!-- Link Button -->
        <div>
          <h3 class="text-lg font-medium mb-3">連結按鈕</h3>
          <div class="flex flex-wrap gap-3">
            <button class="ec-btn ec-btn-link">Link Button</button>
            <button class="ec-btn ec-btn-link" disabled>Disabled Link</button>
          </div>
        </div>

        <!-- Disabled States -->
        <div>
          <h3 class="text-lg font-medium mb-3">停用狀態</h3>
          <div class="flex flex-wrap gap-3">
            <button class="ec-btn ec-btn-black" disabled>Disabled Black</button>
            <button class="ec-btn ec-btn-eslite-red" disabled>Disabled Red</button>
            <button class="ec-btn ec-btn-outline-eslite-red" disabled>Disabled Outline</button>
            <button class="ec-btn ec-btn-secondary" disabled>Disabled Secondary</button>
          </div>
        </div>

        <!-- Button Groups -->
        <div>
          <h3 class="text-lg font-medium mb-3">按鈕群組</h3>
          <div class="flex">
            <button class="ec-btn ec-btn-outline-eslite-red rounded-r-none">Left</button>
            <button class="ec-btn ec-btn-outline-eslite-red rounded-none border-l-0">Middle</button>
            <button class="ec-btn ec-btn-outline-eslite-red rounded-l-none border-l-0">Right</button>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>